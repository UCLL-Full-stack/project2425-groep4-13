// npx prisma migrate dev

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int     @id @default(autoincrement())
    email     String  @unique
    firstName String
    lastName  String
    password  String
    role      String
    Family    Family? @relation(fields: [familyId], references: [id])
    familyId  Int?
}

model Family {
    id      Int    @id @default(autoincrement())
    name    String @unique
    members User[]
}

model Product {
    id   Int    @id @default(autoincrement())
    name String @unique
}
